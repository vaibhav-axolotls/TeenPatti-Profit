<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >

    <item
        android:top="0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        >
        <shape
            android:shape="rectangle">
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"/>

            <stroke
                android:color="@color/strip_setting_bg"
                android:width="2dp" />

<!--            <solid-->
<!--                android:color="@color/pop_setting_stroke"/>-->

            <gradient
                android:startColor="@color/strip_setting_bg"
                android:endColor="@color/strip_setting_bg"
                android:type="linear" />
        </shape>
    </item>
</layer-list>