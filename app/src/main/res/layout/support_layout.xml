<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bghome">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/d_pop_setting"
            android:layout_marginTop="@dimen/pop_up_top_margin"
            android:layout_below="@+id/rtl_toolbar"
            android:layout_marginHorizontal="25dp"
            android:padding="20dp"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:layout_marginBottom="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <com.axolotls.teenpattiprofit.Utils.TextViewWithFont
                        android:id="@+id/txtshare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Support"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colordullwhite"
                        android:textSize="35dp"
                        android:textStyle="bold"

                        />


                    <RelativeLayout
                        android:id="@+id/rltrefer"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txtshare"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:background="@drawable/coupon">

                        <com.axolotls.teenpattiprofit.Utils.TextViewWithFont
                            android:id="@+id/txtReferalcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:text="23423432"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                    </RelativeLayout>


                    <com.axolotls.teenpattiprofit.Utils.TextViewWithFont
                        android:id="@+id/txtAnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rltrefer"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="AND GET"
                        android:visibility="gone"
                        android:textColor="@color/colordullwhite"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:id="@+id/lnrchips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtAnd"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/imgchips"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/whaatup"
                            android:visibility="visible" />
                        <com.axolotls.teenpattiprofit.Utils.TextViewWithFont
                            android:id="@+id/tvInviteCoins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8180841581"
                            android:layout_gravity="center_vertical"
                            android:textColor="#ffffff"
                            android:textSize="30dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrsocial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lnrchips"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgfb"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/facebook"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imgwhats"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/whaatup"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/imgmail"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/mailsocial"
                            android:visibility="visible" />
                    </LinearLayout>

                    <com.axolotls.teenpattiprofit.Utils.TextViewWithFont
                        android:id="@+id/txtyourfrind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lnrsocial"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:text="YOUR FRIEND WILL GET"
                        android:textColor="@color/colordullwhite"
                        android:textSize="15dp" />


                    <LinearLayout
                        android:id="@+id/lnrtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtyourfrind"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/mailsocial"
                            android:visibility="visible" />
                        <com.axolotls.teenpattiprofit.Utils.TextViewWithFont
                            android:id="@+id/txtchipsbelow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="tpprofit22@gmail.com"
                            android:layout_gravity="center_vertical"
                            android:textColor="#ffffff"
                            android:textSize="30dp" />

                    </LinearLayout>

                    <com.axolotls.teenpattiprofit.Utils.TextViewWithFont
                        android:id="@+id/txtFooter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lnrtxt"
                        android:layout_centerHorizontal="true"
                        android:text="INVITE LIMIT 10 FRIENDS"
                        android:textColor="@color/colordullwhite"
                        android:visibility="gone"
                        android:textSize="10dp" />
                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rtl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:id="@+id/imgclosetop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/close"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                />

            <RelativeLayout
                android:id="@+id/img_diaProfile"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:src="@drawable/app_icon"
                android:background="@drawable/strip_bg"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                >

                <com.axolotls.teenpattiprofit.Utils.TextViewWithFont
                    android:id="@+id/txtheader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="GIFTS"
                    android:textColor="@color/Golder_yellow"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAllCaps="true"
                    />

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>