<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:id="@+id/parentlayout"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/d_buy_box_bonus"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txtdays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="Day1"
                android:textColor="@color/Golder_yellow"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgreward"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_below="@+id/txtdays"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:src="@drawable/bulkchipsgreen" />

            <TextView
                android:id="@+id/txtcoins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgreward"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/d_buy_box_bonus_bottom"
                android:gravity="center"
                android:padding="5dp"
                android:text="1,900"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlt_collected"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:background="#B20C2840"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="35dp"
                android:src="@drawable/ic_correct" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>